{
  "compilerOptions": {
    "target": "ESNext", // 由 babel 进一步编译
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
